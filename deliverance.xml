<ruleset>
  <theme href="/openplans/theme.html" />
  <rule class="default">
    <replace theme="children://div[@id='oc-content-container']"
             content="//div[@id='oc-tasktracker-wrapper']|//div[@id='oc-blog-wrapper']|//body[@id='oc-wp-admin-body']|//div[@class='oc-genericError']" />
    <replace theme="children://div[@id='oc-topnav-wrapper']" content="//body/*" href="/oc-topnav" notheme="ignore" />
    <replace theme="children://div[@id='oc-footer-wrapper']" content="//body/*" href="/oc-footer" notheme="ignore" />
  </rule>
</ruleset>
